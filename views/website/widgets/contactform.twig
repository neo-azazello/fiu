<form action="php/contact.php" method="post" id="phpcontactform" novalidate="novalidate" data-redirect="none">

    <div class="row">
        <div class="col-xs-12  col-sm-6">
            <div class="c-form-group">
                <input type="text" name="name" size="40" class="form-text" required="required" placeholder="Sizin adınız"
                    aria-required="true">
            </div>
            <div class="c-form-group">
                <input type="email" name="email" size="40" class="form-text form-email" required="required"
                    placeholder="E-mail ünvanınız" aria-required="true">
            </div>
            <div class="c-form-group">
                <input type="text" name="subject" size="40" class="form-text" required="required" placeholder="Müraciət mövzusu"
                    aria-required="true">
            </div>
        </div>
        <div class="col-xs-12  col-sm-6">
            <div class="c-form-group">
                <textarea name="message" cols="40" rows="10" class="form-textarea" placeholder="Müraciətin mətni"></textarea>
            </div>

            <input type="submit" value="Göndərmək" id="js-contact-btn" class="form-submit btn btn-primary">
        </div>

        <!-- // end .js-contact-result -->

    </div>

    <div class="m-t" id="js-contact-result"
        data-success-msg="Thank you for contacting us. We will get back to you soon."
        data-error-msg="Oops! Mail not sent. Please try sending directly to our email id.">

    </div>
</form>